#include <stdio.h>
void main() 
{
    int a, b, c;
    float d;
    printf("Enter the values for a and b \n");
    scanf("%d %d", &a, &b);
    c = a + b;
    printf("\nADDITION OF TWO NUMBERS a = %d AND b = %d IS EQUAL TO c = %d\n", a, b, c);
    c = a - b;
    printf("\nSUBTRACT b = %d FROM a = %d WHICH IS EQUAL TO c = %d\n", b, a, c);
    c = a * b;
    printf("\nMULTIPLICATION OF TWO NUMBERS a = %d AND b = %d IS EQUAL TO c = %d\n", a, b, c);
    if (b != 0) 
    { 
        d = (float)a / b;  
        printf("\nDIVIDE a = %d BY b = %d WHICH IS EQUAL TO d = %f\n", a, b, d);
    } else 
     {
        printf("\nError: Division by zero is not allowed.\n");
     }
}
